<h3><%= @subscription.name %></h3>
<%= link_to '<< back', subscriptions_path %>
<%= link_to 'Edit', edit_subscription_path, :class => 'btn' %>
<hr>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Depart Date</th>
      <th>Return Date</th>
      <th>Priceline</th>
      <th>Current Price</th>
      <th>Highest Price</th>
      <th>Lowest Price</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @subscription.depart_date %></td>
      <td><%= @subscription.return_date %></td>
      <td><%= @subscription.priceline %></td>
      <td><%= @subscription.current_price %></td>
      <td><%= @subscription.highest_price %></td>
      <td><%= @subscription.lowest_price %></td>
    </tr>
  </tbody>
</table>

<hr />
<h4>History (<%= @subscription.flight_prices.count %>)</h4>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Date Time</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @subscription.flight_prices.each do |f| %>
    <tr>
      <td><%= f.created_at %></td>
      <td><%= f.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
